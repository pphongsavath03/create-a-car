<main>
    <section class="vehicle">
        <h2>
        {{product_name}} - ${{price}}
        </h2>

       <div class="cont">            
            <div class = 'productImage'>
                <img src="/images/{{filename}}" alt="color-car" id='productImg' />
            </div>

            <div class = 'textDesc'>
                <p> {{description}} </p>
            </div>
        </div>
    </section>

    <section>
        <h3 class="option">Vehicle Options</h3>
        <div>
        <button class="button" type="button" id="place-order" onclick="myFunction()" >Place Order</button>
        </div>
    </section>

        <div>   
            <form>
                <section class="radio-container">
                    <p>Please select your vehicle color: </p>
                        <input type="radio" name="color-choice" id="ex-color">
