function myFunction() {
  var exColor = document.getElementById("ex-color").value;
  var intColor = document.getElementById("int-color").value;
  var wheels = document.getElementById("wheels").value;

  document.getElementById("demo").innerHTML = exColor;
  document.getElementById("demo").innerHTML = intColor;
  document.getElementById("demo").innerHTML = wheels;
}
</script>

